@using ArabicTextAnalyzer.Content.Resources
@model ArabicTextAnalyzer.Models.RegisterViewModel
@{
    ViewBag.Title = R.RegisterIntoGravitasApp;
}

@section styles {

    @* backgroung visuel *@
    @Styles.Render("~/Content/css_login")
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@R.CreateANewAccount et disposez de 1000 calls pour l'utilisation de l'application en mode beta.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-4 col-xs-12 control-label" })
        <div class="col-md-8 col-xs-11">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-xs-12 control-label" })
        <div class="col-md-8 col-xs-11">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.fk_activity_id, new { @class = "col-md-4 col-xs-12 control-label" })
        <div class="col-md-8 col-xs-11">
            @Html.DropDownListFor(m => m.fk_activity_id, new[]{
                        new SelectListItem() {Text = "Agence digitale", Value="1"},
                        new SelectListItem() {Text = "Community Manager", Value="2"},
                        new SelectListItem() {Text = "Marque", Value="3"},
                        new SelectListItem() {Text = "Entité publique", Value="4"},
                        new SelectListItem() {Text = "Enseignement", Value="5"},
                        new SelectListItem() {Text = "Recherche", Value="6"},
                        new SelectListItem() {Text = "Veille et Intelligence", Value="7"},
                        new SelectListItem() {Text = "Autre", Value="0"},
                        }, "Choisir votre activité", new { @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-xs-12 control-label" })
        <div class="col-md-8 col-xs-11">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 col-xs-12 control-label" })
        <div class="col-md-8 col-xs-11">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@R.Register" />
        </div>
    </div>
    <p style="float:right;text-align: justify;background-color: rgba(255,100,7,0.1);padding: 5px;border-top: 1px solid;border-top-color: red;">Les mots de passe doivent contenir au moins un caractère autre qu'une lettre ou qu'un chiffre. Les mots de passe doivent contenir au moins une lettre majuscule ('A' - 'Z')</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
