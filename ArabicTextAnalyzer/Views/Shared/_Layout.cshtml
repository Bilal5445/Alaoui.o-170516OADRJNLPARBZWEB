<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    @* vertical load time *@
    <link rel="stylesheet" type="text/css" href="~/Content/hlpr.vertical-text.css" />

</head>
<body onload="getPlainLoadTime()">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Adekwasy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Translate", "Index", "Train", new { area = "" }, null)</li>
                    @* @<li>@Html.ActionLink("Api Doc", "Index", "ApiDoc")</li> *@
                    <li>@Html.ActionLink("API Doc", "Index", "Help", new { area = "" }, null)</li>
                    @* <li><a href="@string.Format("http://" + Request.Url.Host + ":{0}/Help", "50037")">Api Doc</a></li> *@
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                    <li>@Html.ActionLink("Administration", "Index", "Admin", new { area = "" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="body">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Adekwasy</p>
            </footer>
        </div>
    </div>

    <!-- VERTICAL LOADTIME -->
    <div class="rotated-text"><span class="rotated-text__inner"><strong>v0.1712.15.15 - Load Time : </strong><span id="loadTime"></span></span></div>
    <script type="text/javascript" src="~/Scripts/my.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
