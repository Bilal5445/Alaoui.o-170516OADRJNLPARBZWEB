@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li><a href=""><i class="fa fa-user-circle"></i> Account : @User.Identity.GetUserName()</a></li>
        <li><a><span class="breaker">|</span></a></li>
        <li><a href="/Manage/ManageApp" title="View the calls consumption of your current plan"><i class="fa fa-dollar"></i> Consumption</a></li>
        <li><a><span class="breaker">|</span></a></li>
        <li><a href="/Manage" title="Manage this user account"><i class="fa fa-cog"></i> Settings</a></li>
        <li><a><span class="breaker">|</span></a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" title="Log out"><i class="fa fa-power-off"></i> Log Out</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @* <li>@Html.ActionLink("Register", "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li> *@
        <li><a href="/Account/Login" id="loginLink" title="Log in"><i class="fa fa-sign-in"></i> Log in</a></li>
</ul>
}
