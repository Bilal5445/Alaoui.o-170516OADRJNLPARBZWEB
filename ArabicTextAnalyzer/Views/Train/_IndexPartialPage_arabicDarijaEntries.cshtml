@using System.Text.RegularExpressions
@using ArabicTextAnalyzer.Business.Provider
@model List<ArabicTextAnalyzer.ViewModels.Class2>
<table class="posts">
    <tr class="header">
        <th class="row-1 center">Posts</th>
    </tr>
    @foreach (var entry in Model)
    {
        String expr = "\\b" + String.Join("\\b|\\b", entry.ArabicDarijaEntryLatinWords.ToArray(), "\\b");
        <tr>
            <td class="arabic-text">@Html.Raw(@TextTools.HighlightExtractedLatinWords(@entry.ArabicDarijaEntry.ArabicDarijaText))</td>
        </tr>
    }
</table>