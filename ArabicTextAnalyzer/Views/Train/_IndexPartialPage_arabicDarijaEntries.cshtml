@using ArabicTextAnalyzer.Business.Provider
@* @model List<ArabicTextAnalyzer.ViewModels.Class2> *@
@model ArabicTextAnalyzer.ViewModels.Class1

<!-- table of posts -->
<table class="posts datatables-table table table-striped table-hover table-bordered">
    <thead>
        <tr class="header">
            <th class="center top col50px">#</th>
            <th class="center top col110px">Date</th>
            <th class="center top col50prc">Arabizi</th>
            <th class="center top col50prc">Arabic</th>
            <th class="center top col100px">NER Types</th>
            <th class="center top col130px">Entities</th>
            <th class="center top col75px"></th>
        </tr>
    </thead>
    <tfoot>
        <tr class="header">
            <th class="center top">#</th>
            <th class="center top">Date</th>
            <th class="center top">Arabizi</th>
            <th class="center top">Arabic</th>
            <th class="center top">NER Types</th>
            <th class="center top">Entities</th>
            <th class="center top"></th>s
        </tr>
    </tfoot>
    <tbody>
        @foreach (var entry in Model.Classes2)
        {
            <tr>
                <td class="center top">@(Model.Classes2.Count - Model.Classes2.IndexOf(entry))</td>
                <td class="arabizi-text top">@entry.ArabiziEntry.ArabiziEntryDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="arabizi-text top">@entry.ArabiziEntry.ArabiziText</td>
                <td class="arabic-text top">@Html.Raw(@TextTools.HighlightExtractedLatinWords(@entry.ArabicDarijaEntry.ArabicDarijaText, @entry.ArabicDarijaEntryLatinWords))</td>
                <td class="arabic-text top entitiestype">@Html.Raw(@TextTools.DisplayEntitiesType(@entry.TextEntities))</td>
                <td class="arabic-text top entities">@Html.Raw(@TextTools.DisplayEntities(@entry.TextEntities))</td>
                <td class="center top">
                    <a href="@Url.Action("Train_DeleteEntry", new { arabiziWordGuid = @entry.ArabiziEntry.ID_ARABIZIENTRY })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Remove</a>
                    <div class="dropdown">
                      <button class="btn btn-warning btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Main Tag
                      <span class="caret"></span></button>
                      <ul class="dropdown-menu">
                          @foreach (var mainEntity in Model.MainEntities)
                          {
                            @* <li><a href="@Url.Action("Train_ApplyNewMainTag", new { idArabicDarijaEntry = @entry.ArabicDarijaEntry.ID_ARABICDARIJAENTRY, mainEntity = @mainEntity.TextEntity.Mention })">@mainEntity.TextEntity.Mention</a></li> *@
                            <li><a href="@Url.Action("Train_ApplyNewMainTag", new { idArabicDarijaEntry = @entry.ArabicDarijaEntry.ID_ARABICDARIJAENTRY, mainEntity = @mainEntity.ThemeName })">@mainEntity.ThemeName</a></li>
                          }
                      </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
